		</footer>

	</body>
</html>

<!--Smooth scroll Script  -->
<script>
	document.addEventListener('DOMContentLoaded', () => {
		// Agregar ID al inicio de la página
		document.body.id = 'top';
		
		// Scroll suave para enlaces internos (solo en home)
		const isProjectsPage = window.location.pathname === '/projects' || window.location.pathname === '/projects/';
		
		if (!isProjectsPage) {
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e: Event) {
					e.preventDefault();
					const target = e.currentTarget as HTMLAnchorElement;
					const href = target.getAttribute('href');
					
					if (href === '#top') {
						window.scrollTo({
							top: 0,
							behavior: 'smooth'
						});
					} else if (href) {
						const element = document.querySelector(href);
						if (element) {
							element.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					}
				});
			});
		}
	});
</script>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}

	/* Smooth scrolling y mejoras de performance */
	@media (prefers-reduced-motion: no-preference) {
		* {
			scroll-behavior: smooth;
		}
	}

	/* Navegación flotante */
	nav {
		backdrop-filter: blur(20px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}
	
	/* Enlaces de navegación con iconos */
	nav a {
		transition: all 0.3s ease;
	}
	
	nav a:hover {
		color: #1e293b !important;
	}
	
	/* Efectos hover para iconos */
	nav a:hover svg {
		transform: scale(1.1);
		transition: transform 0.2s ease;
	}
	
	/* Estilo activo para Projects */
	nav a[href="/projects"] svg {
		transition: all 0.3s ease;
	}
	
	/* Logo más destacado */
	nav a[href="/"] {
		letter-spacing: -0.025em;
		font-weight: 700;
	}
	
	/* Responsive design */
	@media (max-width: 768px) {
		nav {
			padding: 0.5rem 1rem;
		}
		
		nav .flex {
			gap: 1rem;
		}
		
		nav a[href="/"] {
			font-size: 1.125rem;
		}
		
		/* En móvil, mostrar solo iconos */
		nav a span {
			display: none;
		}
	}
	
	@media (max-width: 640px) {
		nav {
			padding: 0.375rem 0.75rem;
		}
		
		nav .flex {
			gap: 0.75rem;
		}
		
		/* Enlaces más compactos en móvil */
		nav a {
			font-size: 0.875rem;
		}
	}
</style>
