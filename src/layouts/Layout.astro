---
import '../styles/global.css';

export interface Props {
	title?: string;
	description?: string;
}

const { title = "Franco Gaggero - Full Stack Developer", description = "Portfolio personal de Franco Gaggero - Desarrollador Full Stack especializado en tecnologías web modernas" } = Astro.props;

// Detectar la página actual para navegación dinámica
const currentPath = Astro.url.pathname;
const isProjectsPage = currentPath === '/projects' || currentPath === '/projects/';
---

