<!--Smooth scroll Script  -->
<script>
	document.addEventListener('DOMContentLoaded', () => {
		// Agregar ID al inicio de la página para el enlace "FG"
		document.body.id = 'top';
		
		// Detectar si estamos en la página de proyectos o INDEX
		const isProjectsPage = window.location.pathname === '/projects' || window.location.pathname === '/projects/';
		
		// Mejorar scroll suave para todos los enlaces internos
		document.querySelectorAll('a[href^="#"]').forEach(anchor => {
			anchor.addEventListener('click', function (e) {
				const target = e.currentTarget as HTMLAnchorElement;
				const href = target.getAttribute('href');
				
				// Si estamos en /projects y clickeamos un enlace a sección, ir a la home primero
				if (isProjectsPage && href && href !== '#top') {
					window.location.href = '/' + href;
					return;
				}
				
				e.preventDefault();
				if (href === '#top') {
					window.scrollTo({
						top: 0,
						behavior: 'smooth'
					});
				} else if (href) {
					const element = document.querySelector(href);
					if (element) {
						element.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				}
			});
		});
		
		// Solo activar la detección de scroll en la página principal
		if (!isProjectsPage) {
			// Resaltar enlace activo basado en scroll
			const sections = ['top', 'about', 'projects', 'contact'];
			const navLinks = document.querySelectorAll('nav a[href^="#"]');
			
			function updateActiveLink() {
				const scrollY = window.pageYOffset;
				const windowHeight = window.innerHeight;
				
				// Si está en la parte superior, activar "Home"
				if (scrollY < windowHeight * 0.2) {
					navLinks.forEach(link => link.classList.remove('active'));
					document.querySelector('a[href="#top"]')?.classList.add('active');
					return;
				}
				
				// Encontrar la sección actual
				let current = '';
				sections.forEach(section => {
					const element = document.getElementById(section);
					if (element) {
						const rect = element.getBoundingClientRect();
						if (rect.top <= 100 && rect.bottom >= 100) {
							current = section;
						}
					}
				});
				
				// Actualizar clases activas
				navLinks.forEach(link => {
					link.classList.remove('active');
					if (link.getAttribute('href') === `#${current}`) {
						link.classList.add('active');
					}
				});
			}
			
			// Escuchar scroll
			window.addEventListener('scroll', updateActiveLink);
			updateActiveLink(); // Llamar una vez al cargar
		} else {
			// En la página de proyectos, marcar "All Projects" como activo
			const navLinks = document.querySelectorAll('nav a');
			navLinks.forEach(link => link.classList.remove('active'));
			const allProjectsLink = document.querySelector('nav a[href="/projects"]');
			if (allProjectsLink) {
				allProjectsLink.classList.add('active');
			}
		}
	});
</script>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}

	/* Smooth scrolling y mejoras de performance */
	@media (prefers-reduced-motion: no-preference) {
		* {
			scroll-behavior: smooth;
		}
	}

	/* Responsive navigation */
	@media (max-width: 1024px) {
		nav {
			top: 1rem;
			padding: 0 1rem;
		}
		nav > div {
			padding: 0.75rem 1.5rem;
		}
		nav ul {
			gap: 1.5rem;
		}
	}
	
	@media (max-width: 768px) {
		nav {
			top: 1rem;
			padding: 0 1rem;
		}
		nav > div {
			padding: 0.75rem 1rem;
		}
		nav ul {
			gap: 1rem;
		}
		nav ul li a {
			font-size: 0.875rem;
		}
		nav ul li a[href="#contact"] {
			padding: 0.5rem 1rem;
		}
		/* Ocultar algunos elementos en móvil */
		nav .hidden.lg\\:inline {
			display: none !important;
		}
	}
	
	@media (max-width: 640px) {
		nav {
			top: 0.75rem;
			padding: 0 0.75rem;
		}
		nav > div {
			padding: 0.5rem 0.75rem;
		}
		nav ul {
			gap: 0.75rem;
		}
		nav ul li a {
			font-size: 0.8rem;
		}
		nav ul li a[href="#contact"] {
			padding: 0.375rem 0.75rem;
		}
		/* Navegación compacta en móvil */
		nav ul li span {
			display: none;
		}
		nav ul li svg {
			width: 1rem;
			height: 1rem;
		}
		/* Ocultar dropdown en móvil muy pequeño */
		nav .relative.group {
			display: none;
		}
	}
	
	/* Smooth hover para dropdown */
	.group:hover .group-hover\\:opacity-100 {
		opacity: 1;
		visibility: visible;
		transform: translateY(0);
	}
	
	.group .group-hover\\:opacity-100 {
		transform: translateY(-10px);
		transition: all 0.2s ease-out;
	}
	
	/* Estilos para enlaces activos */
	nav a.active {
		color: #1e293b !important;
		font-weight: 600;
	}
	
	nav a.active span.absolute {
		width: 100% !important;
	}
	
	nav a[href="#top"].active div {
		transform: scale(1.1);
		box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
	}
	
	/* Animación suave para cambios */
	nav a {
		transition: all 0.3s ease;
	}
	
	nav a span.absolute {
		transition: width 0.3s ease;
	}
</style>
